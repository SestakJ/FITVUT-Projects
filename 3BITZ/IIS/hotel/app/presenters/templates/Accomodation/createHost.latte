{block title}
  Hotel Prestíž - Pobyty - Rezervovať
{/block}
{block content}
<div align="center">
      {control createHostForm}
</div>

<div class="card blurred-card text-center">
  <div class="card-block">
    {foreach $flashes as $flash}
    {if $flash->type == "ok"}
    <div class="alert alert-success">
       <strong>Úspešne rezervované</strong> {$flash->message}
    </div>
    {else}
    <div class="alert alert-danger">
       <strong>Nie je možné rezervovať</strong> {$flash->message}
    </div>
    {/if}
    {/foreach}
    <a href="{link Homepage:default}" class="btn btn-primary">Návrat do pobytov</a>
  </div>
{/block}
